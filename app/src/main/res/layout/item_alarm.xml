<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#000000"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="28">

            <com.wp.demo.view.DefineProgressView
                android:id="@+id/dv_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:firstColor="@color/colorPrimaryDark"
                app:progressHeight="38dp"
                app:progressMarginText="0dp"
                app:progressTextColor="@color/colorPrimary"
                app:progressTextSize="0sp"
                app:secondColor="@color/colorPrimary"
                app:textColor="@color/black_color" />

            <TextView
                android:id="@+id/tv_initial_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="18:59:56"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="18:59:56"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/iv_reset"
            android:padding="2dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_reset" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_ring"
            android:padding="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_ring_yellow" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_light_gray_1c1c1e"
            android:gravity="center"
            android:text="删除"
            android:textColor="#BBBBBB"
            android:textSize="8dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_ctrl"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_light_yellow_eca537"
            android:gravity="center"
            android:text="暂停"
            android:textColor="#eca537"
            android:textSize="8dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
